app = "esi-api"

[build]
  dockerfile = "infra/docker/api.prod.Dockerfile"

[env]
  ALLOW_ORIGINS = "https://yourapp.example"

[[services]]
  internal_port = 8000
  protocol = "tcp"
  [services.concurrency]
    hard_limit = 200
    soft_limit = 100
  [[services.ports]]
    handlers = ["tls", "http"]
    port = 443
  [[services.ports]]
    handlers = ["http"]
    port = 80



