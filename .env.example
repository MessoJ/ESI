# API
ALLOW_ORIGINS=http://localhost:5173
FORCE_HTTPS=false
API_KEY_SECRET=change-me

# External APIs
FRED_API_KEY=

# Redis
# Use internal hostname when running via Docker Compose
REDIS_URL=redis://redis:6379/0

# Cache TTLs (seconds)
CACHE_TTL_LATEST=600
CACHE_TTL_HISTORY=3600
CACHE_TTL_COMPONENTS=600
CACHE_TTL_STALE=60

# S3/MinIO (optional for exports and ETL uploads)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=esi-data
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Sentry (optional)
SENTRY_DSN=

# Database (alerts + series points)
ALERTS_DATABASE_URL=sqlite:///./esi_alerts.db
DATABASE_URL=sqlite:///./esi_series.db

# TradingEconomics (optional fetcher)
TE_CREDENTIALS=guest:guest

# UI (Vite)
# VITE_API_URL can point to http://localhost:8000 when running ui dev server separately
# VITE_API_URL=http://localhost:8000
